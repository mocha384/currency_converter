<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/activity_currency_recyclerview_item_name"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="EUR" />

    <TextView
        android:id="@+id/activity_currency_recyclerview_item_value"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="end"
        android:text="1.0000" />

    <TextView
        android:id="@+id/activity_currency_recyclerview_item_calculated_value"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="end"
        android:text="1.0000" />

</LinearLayout>