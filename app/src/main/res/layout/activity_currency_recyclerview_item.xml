<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/activity_currency_recyclerview_item_name"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="EUR"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activity_currency_recyclerview_item_value"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="1.0000"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/activity_currency_recyclerview_item_name" />

    <TextView
        android:id="@+id/activity_currency_recyclerview_item_calculated_value"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="1.0000"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/activity_currency_recyclerview_item_value" />

</android.support.constraint.ConstraintLayout>